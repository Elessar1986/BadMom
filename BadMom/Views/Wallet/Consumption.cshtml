@model IEnumerable<BadMom.Models.Wallet.Consumption>
@{
    Layout = "~/Views/Wallet/_WalletLayout.cshtml";
    ViewBag.Menu = "consumption";
}


<nav class="navbar navbar-expand-lg navbar-dark wallet-nav income-nav">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample08" aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
        Фильтры
    </button>

    <div class="collapse navbar-collapse justify-content-md-center wallet-form" id="navbarsExample08">
        <ul class="navbar-nav"></ul>
        @using (Html.BeginForm("Consumption", "Wallet", FormMethod.Post, new { @class = "form-inline my-2 my-md-0" }))
        {
            @Html.AntiForgeryToken()
            <div class="input-daterange" style="width: auto;">
                <input type="text" class="input-sm form-control" name="dateFrom" value="@DateTime.Now.AddMonths(-1).ToShortDateString()" />
                <input type="text" class="input-sm form-control" name="dateTo" value="@DateTime.Now.ToShortDateString()" />
            </div>
            @Html.DropDownList("sourceId", (List<SelectListItem>)ViewBag.SourcesFilter, new { @id = "Sources", @class = "form-control", @required = "required" })
            <button type="submit">Показать</button>
        }
    </div>
</nav>



<div class="container wallet-main-head">

    <a class="" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        <div class="d-flex align-content-center align-items-center add-advert">

            <i class="fa fa-3x fa-plus-square" style="margin-right:3px;"></i> Добавить расход

        </div>
    </a>

    <div class="collapse" id="collapseExample">
        @Html.Partial("_AddConsumption", new BadMom.Models.Wallet.Consumption())
    </div>

    <div id="consumptionDiv" class="wallet-main">

        @Html.Partial("_Consumption", Model)

    </div>

</div>

