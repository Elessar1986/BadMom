
@{
    ViewBag.Title = "Кошелек";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Styles.Render("~/Content/wallet")
}


<section style="background: url(../../Resources/financial.jpg);background-color: violet; background-size: cover; background-position: center center" class="hero-wallet">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 main-title" style="color:black">
                <h1>Кошелек</h1>
            </div>
        </div>
    </div>
</section>

<nav class="navbar navbar-expand-lg navbar-dark wallet-nav">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainWalletNav" aria-controls="mainWalletNav" aria-expanded="false" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-center" id="mainWalletNav">
        <ul class="navbar-nav">

            <li class="nav-item ">
                <a class="nav-link @if (ViewBag.Menu == "resuorce"){ <text>active</text> }" href="@Url.Action("Resources")">Мои счета</a>
            </li>

            <li class="nav-item ">
                <a class="nav-link @if (ViewBag.Menu == "income"){ <text>active</text> }" href="@Url.Action("Income")">Доходы</a>
            </li>

            <li class="nav-item ">
                <a class="nav-link @if (ViewBag.Menu == "consumption"){ <text>active</text> }" href="@Url.Action("Consumption")">Расходы</a>
            </li>

            <li class="nav-item ">
                <a class="nav-link @if (ViewBag.Menu == "statistics"){ <text>active</text> }" href="@Url.Action("Statistics")">Статистика</a>
            </li>

        </ul>
    </div>
</nav>




@RenderBody()


@section scripts{

    @Scripts.Render("~/bundles/wallet");


}


@RenderSection("scripts", required: false)





