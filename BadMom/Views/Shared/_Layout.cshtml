<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GOOD MOM - @ViewBag.Title</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/fontawesome")
    @*@Styles.Render("~/Content/badmom")*@
    @Styles.Render("~/Content/badmom/fontastic.css")
    @Styles.Render("~/Content/badmom/fancyapps/jquery.fancybox.min.css")
    @Styles.Render("~/Content/badmom/style.default.css")
    @Styles.Render("~/Content/layout")



    @Scripts.Render("~/bundles/modernizr")
    <!-- Google fonts - Open Sans-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">

    @RenderSection("styles", required: false)

</head>
<body>
    <header class="header">
        <!-- Main Navbar-->
        <nav class="navbar navbar-expand-lg main-background main-navbar">
            <div class="search-area">
                <div class="search-area-inner d-flex align-items-center justify-content-center">
                    <div class="close-btn"><i class="icon-close"></i></div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-8">
                            <form action="#">
                                <div class="form-group">
                                    <input type="search" name="search" id="search" placeholder="What are you looking for?">
                                    <button type="submit" class="submit"><i class="icon-search-1"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <!-- Navbar Brand -->
                <div class="navbar-header d-flex align-items-center justify-content-between">
                    <!-- Navbar Brand --><a href="@Url.Action("Index","Home")" class="navbar-brand"><img class="logo-smaler" src="~/Resources/logo.png"></a>
                    <!-- Toggle Button-->
                    <button type="button" data-toggle="collapse" data-target="#navbarcollapse" aria-controls="navbarcollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"><span></span><span></span><span></span></button>
                </div>
                <!-- Navbar Menu -->
                <div id="navbarcollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Home")" class="nav-link @if (ViewBag.ActiveMenu == "Home") {<text>active</text> } ">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Blog")" class="nav-link @if (ViewBag.ActiveMenu == "Blog") {<text>active</text> } ">Блог</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Planer")" class="nav-link @if (ViewBag.ActiveMenu == "Planer") {<text>active</text> } ">Планировщик</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Wallet")" class="nav-link @if (ViewBag.ActiveMenu == "Wallet") {<text>active</text> } ">Кошелек</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Advert")" class="nav-link @if (ViewBag.ActiveMenu == "Advert") {<text>active</text> } ">Обьявления</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item">
                            @Html.ActionLink("Войти", "Login", "Registration", null, new { @class = "nav-link" })
                        </li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <t class="">@User.Identity.Name</t>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown03">
                                @Html.ActionLink("Кабинет", "Index", "User", null, new { @class = "dropdown-item" })
                                <a class="dropdown-item" href="~/User/MyMessages">Сообщения</a>
                                @Html.ActionLink("Выйти", "Logoff", "Registration", null, new { @class = "dropdown-item" })
                            </div>
                        </div>
                    }
                    @*<ul class="langs navbar-text"><a href="#" class="active">EN</a><span>           </span><a href="#">ES</a></ul>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        @RenderBody()
    </div>
    <footer class="main-footer"> 
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="@Url.Action("Index","Home")" class="navbar-brand"><img class="logo-footer" src="~/Resources/logo_white.png"></a>
                        @*<h6 class="text-white">Bad Mom</h6>*@
                    </div>
                    <div class="contact-details">
                        <p>Email: <a href="mailto:info@goodmomonline.com.ua">info@goodmomonline.com.ua</a></p>
                        <ul class="social-menu">
                            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="menus d-flex">
                        <ul class="list-unstyled">
                            <li> @Html.ActionLink("Блог", "Index", "Blog", null, new { })</li>
                            <li> <a href="@Url.Action("Index","Advert")">Планировщик</a></li>
                            <li> <a href="@Url.Action("Index","Wallet")">Кошелек</a></li>
                            <li> <a href="@Url.Action("Index","Advert")">Обьявления</a></li>
                        </ul>
                        
                    </div>
                </div>

                <div class="col-6 col-md-4">
                    <ul class="list-unstyled">
                        <li> <a href="#">О проэкте</a></li>
                        <li> <a href="#">Правила</a></li>
                        <li> <a href="#">Связаться с нами</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="copyrights">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; 2018. All rights reserved by Arepiev Ivan.</p>
                    </div>
                    <div class="col-md-6 text-right">
                        <p>
                            Template By <a href="https://bootstraptemple.com" class="text-white">Bootstrap Temple</a>
                            <!-- Please do not remove the backlink to Bootstrap Temple unless you purchase an attribution-free license  Bootstrap Temple or support us at http://bootstrapious.com/donate. It is part of the license conditions. Thanks for understanding :)                         -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/fancyapps")
    @Scripts.Render("~/bundles/ajax")
    <script>
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }

        $(".decimalItem").focusout(function () {
            this.value = this.value.replace(".", ",");
        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
