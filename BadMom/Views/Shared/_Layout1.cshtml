<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BAD MOM - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/fontawesome");
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-dark bg-gray navbar-expand-md">

        <div class="container">
            <div class="col-9 d-md-none ">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown02" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">
                        <span class="navbar-toggler-icon"></span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown02">
                        @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Блог", "Index", "Blog", null, new { @class = "dropdown-item" })
                        <a class="dropdown-item" href="#">Планировщик</a>
                        <a class="dropdown-item" href="#">Кошелек</a>
                        <a class="dropdown-item" href="#">Обьявления</a>
                        @if (User.IsInRole("admin"))
                        {<a class="dropdown-item" href="#">Админка</a>}
                    </div>
                </div>
            </div>
            <div class="col-8 offset-lg-2 offset-md-2 d-none d-sm-none d-md-block">
                <div class="collapse navbar-collapse justify-content-md-center" id="">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Блог", "Index", "Blog", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Планировщик</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Кошелек</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Обьявления</a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#">Админка</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-3 col-md-2 text-right">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">

                            <i class="fa fa-user-circle" aria-hidden="true"></i>
                            <t class="d-none d-sm-none d-lg-inline-block">@User.Identity.Name</t>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdown03">
                            <a class="dropdown-item" href="#">Кабинет</a>
                            <a class="dropdown-item" href="#">Сообщения</a>
                            @*<a class="dropdown-item" href="~Registration/Logoff">Выйти</a>*@
                            @Html.ActionLink("Выйти", "Logoff", "Registration", null, new { @class = "dropdown-item" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </nav>
    <div class="Test TestLeft"></div>
    <div class="container" style="padding-top:50px;">

        @RenderBody()
        <hr />
        <footer>

            <div class="card bg-gray color-pink" style="padding:20px">

                2018 All rights reserved by Arepiev Ivan &copy;
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
