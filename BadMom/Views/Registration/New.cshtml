@model BadMom.Models.Registration.RegistrUserVM
@{
    ViewBag.Title = "Регистрация";
}
<div class="container">

    <div class="row" style="margin-bottom:20%;margin-top:20%;">
        <div class="col-12">
            <div class="text-center">
                <h2>Регистрация</h2>
            </div>

            <div class="">

                @using (Html.BeginForm("New","Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group col-sm-6 offset-sm-3">
                        @Html.TextBoxFor(model => model.Login, new { @id = "login", @placeholder = "Login", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-6 offset-sm-3">
                        @Html.PasswordFor(model => model.Password, new { @id = "Password", @placeholder = "Пароль", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-6 offset-sm-3">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @id = "ConfirmPassword", @placeholder = "Пароль ёще раз", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-6 offset-sm-3">
                        @Html.TextBoxFor(model => model.Email, new { @type= "email", @id = "Email", @placeholder = "E-mail", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-6 offset-sm-3">
                        <label class="btn btn-secondary">
                            <input style="display:none;" type="file" name="fileUpload" accept="image/*" onchange="readURL(this);" />
                            Загрузить аватар
                        </label>
                            <img style="display:inline; max-width:200px; max-height:200px;" src="http://via.placeholder.com/200x200" id="avatar_preview" />

                    </div>
                    <div class="form-group col-sm-6 offset-sm-3">
                        <button type="submit" class="btn btn-secondary">Зарегистрироваться</button>
                    </div>
                </div>
        }
            </div>

            </div>
        </div>

    </div>

@section scripts{
    
    @Scripts.Render("~/bundles/new")

    }